# Gemini API Keys (comma-separated for round-robin)
GEMINI_API_KEYS=your_gemini_key_1,your_gemini_key_2,your_gemini_key_3

# OpenAI API Keys (comma-separated for round-robin)
OPENAI_API_KEYS=your_openai_key_1,your_openai_key_2

# Azure Speech (TTS)
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=southeastasia
AZURE_SPEECH_ENDPOINT=https://southeastasia.tts.speech.microsoft.com/cognitiveservices

# Polinations AI
POLINATIONS_BASE_URL=https://image.pollinations.ai

# Storage Directories
VIDEO_TMP_DIR=./storage/tmp
VIDEO_OUTPUT_DIR=./storage/videos
SRT_OUTPUT_DIR=./storage/subtitles
IMAGE_OUTPUT_DIR=./storage/images
AUDIO_OUTPUT_DIR=./storage/audio

# Application
PORT=3000
NODE_ENV=development

# API Keys for authentication (comma-separated)
API_KEYS=your_api_key_1,your_api_key_2

# Database
DATABASE_URL=file:./dev.db
