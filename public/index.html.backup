<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shorts Story Generator</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .login-card, .main-content {
            background: white;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }

        .login-card {
            max-width: 400px;
            margin: 100px auto;
        }

        h1, h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-weight: 500;
        }

        input[type="text"],
        input[type="number"],
        input[type="password"],
        select,
        textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
        }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: #667eea;
        }

        button {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 14px 28px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            transition: transform 0.2s;
            width: 100%;
        }

        button:hover {
            transform: translateY(-2px);
        }

        button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .hidden {
            display: none !important;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .logout-btn {
            background: #f44336;
            width: auto;
            padding: 10px 20px;
        }

        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .project-card {
            background: #f5f5f5;
            padding: 20px;
            border-radius: 8px;
            border-left: 4px solid #667eea;
        }

        .project-card h3 {
            color: #333;
            margin-bottom: 10px;
        }

        .project-card p {
            color: #666;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .status {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 600;
            margin-top: 10px;
        }

        .status.completed {
            background: #4caf50;
            color: white;
        }

        .status.pending {
            background: #ff9800;
            color: white;
        }

        .status.failed {
            background: #f44336;
            color: white;
        }

        .status.processing {
            background: #2196f3;
            color: white;
        }

        .error {
            background: #ffebee;
            color: #c62828;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .success {
            background: #e8f5e9;
            color: #2e7d32;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .speaker-list {
            max-height: 200px;
            overflow-y: auto;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 10px;
            margin-top: 10px;
        }

        .speaker-item {
            padding: 8px;
            cursor: pointer;
            border-radius: 4px;
            margin-bottom: 4px;
        }

        .speaker-item:hover {
            background: #f0f0f0;
        }

        .speaker-item.selected {
            background: #667eea;
            color: white;
        }

        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            border-bottom: 2px solid #e0e0e0;
        }

        .tab {
            padding: 12px 24px;
            cursor: pointer;
            border: none;
            background: transparent;
            color: #666;
            font-weight: 600;
            width: auto;
        }

        .tab.active {
            color: #667eea;
            border-bottom: 3px solid #667eea;
            margin-bottom: -2px;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .loading {
            text-align: center;
            padding: 40px;
        }

        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .action-buttons {
            margin-top: 15px;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .action-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: transform 0.2s;
            width: auto;
        }

        .retry-btn {
            background: #ff9800;
            color: white;
        }

        .logs-btn {
            background: #2196f3;
            color: white;
        }

        .action-btn:hover {
            transform: translateY(-2px);
        }

        .action-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content {
            background-color: white;
            margin: 5% auto;
            padding: 20px;
            border-radius: 12px;
            width: 80%;
            max-width: 800px;
            max-height: 80vh;
            overflow-y: auto;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .close-modal {
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            color: #666;
        }

        .close-modal:hover {
            color: #333;
        }

        .log-entry {
            padding: 10px;
            margin-bottom: 8px;
            border-radius: 4px;
            border-left: 4px solid #667eea;
        }

        .log-entry.INFO {
            background: #e3f2fd;
            border-left-color: #2196f3;
        }

        .log-entry.ERROR {
            background: #ffebee;
            border-left-color: #f44336;
        }

        .log-entry.WARN {
            background: #fff3e0;
            border-left-color: #ff9800;
        }

        .log-time {
            font-size: 12px;
            color: #666;
        }

        .log-message {
            margin-top: 4px;
            color: #333;
            font-weight: 600;
        }

        .log-code {
            font-size: 11px;
            color: #888;
            font-family: monospace;
        }

        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }
            
            .projects-grid {
                grid-template-columns: 1fr;
            }

            .modal-content {
                width: 95%;
                margin: 10% auto;
            }
        }
    </style>
</head>
<body>
    <!-- Login Screen -->
    <div id="loginScreen" class="login-card">
        <h1>ðŸŽ¬ Shorts Story Generator</h1>
        <p style="margin-bottom: 30px; color: #666;">Login with your API key</p>
        
        <div id="loginError" class="error hidden"></div>
        
        <div class="form-group">
            <label for="apiKey">API Key</label>
            <input type="password" id="apiKey" placeholder="Enter your API key">
        </div>
        
        <button onclick="login()">Login</button>
    </div>

    <!-- Main Content -->
    <div id="mainContent" class="main-content container hidden">
        <div class="header">
            <h1>ðŸŽ¬ Shorts Story Generator</h1>
            <button class="logout-btn" onclick="logout()">Logout</button>
        </div>

        <div id="message" class="hidden"></div>

        <div class="tabs">
            <button class="tab active" onclick="switchTab('create')">Create Story</button>
            <button class="tab" onclick="switchTab('projects')">My Projects</button>
        </div>

        <!-- Create Story Tab -->
        <div id="createTab" class="tab-content active">
            <h2>Create New Story</h2>
            
            <form id="storyForm" onsubmit="createStory(event)">
                <div class="form-group">
                    <label for="topic">Topic *</label>
                    <input type="text" id="topic" required placeholder="e.g., Ayah kurang tidur">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="genre">Genre *</label>
                        <input type="text" id="genre" required placeholder="e.g., family_comedy">
                    </div>

                    <div class="form-group">
                        <label for="language">Language *</label>
                        <select id="language" required>
                            <option value="id">Indonesian (id)</option>
                            <option value="en">English (en)</option>
                            <option value="zh">Chinese (zh)</option>
                            <option value="ja">Japanese (ja)</option>
                            <option value="ko">Korean (ko)</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="imageStyle">Image Style</label>
                        <select id="imageStyle">
                            <option value="">Default</option>
                            <option value="realistic">Realistic</option>
                            <option value="cartoon">Cartoon</option>
                            <option value="animation_90s">Animation 90s</option>
                            <option value="ghibli">Ghibli</option>
                            <option value="anime">Anime</option>
                            <option value="pixar">Pixar</option>
                            <option value="watercolor">Watercolor</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="narrativeTone">Narrative Tone</label>
                        <select id="narrativeTone">
                            <option value="">Default</option>
                            <option value="casual">Casual</option>
                            <option value="formal">Formal</option>
                            <option value="funny">Funny</option>
                            <option value="dramatic">Dramatic</option>
                            <option value="inspirational">Inspirational</option>
                            <option value="mysterious">Mysterious</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="orientation">Orientation *</label>
                        <select id="orientation" required>
                            <option value="PORTRAIT">Portrait (9:16)</option>
                            <option value="LANDSCAPE">Landscape (16:9)</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="totalImages">Total Scenes *</label>
                        <input type="number" id="totalImages" required value="8" min="3" max="20">
                    </div>
                </div>

                <div class="form-group">
                    <label for="modelProvider">AI Model *</label>
                    <select id="modelProvider" required>
                        <option value="gemini">Gemini</option>
                        <option value="openai">OpenAI</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Speaker Voice *</label>
                    <button type="button" onclick="loadSpeakers()" style="margin-bottom: 10px;">Load Speakers</button>
                    <input type="text" id="selectedSpeaker" readonly placeholder="Select a speaker from the list below">
                    <div id="speakerList" class="speaker-list hidden"></div>
                </div>

                <button type="submit" id="submitBtn">Create Story</button>
            </form>
        </div>

        <!-- Projects Tab -->
        <div id="projectsTab" class="tab-content">
            <h2>My Projects</h2>
            <button onclick="loadProjects()" style="margin-bottom: 20px; width: auto;">Refresh Projects</button>
            
            <div id="projectsLoading" class="loading hidden">
                <div class="spinner"></div>
                <p>Loading projects...</p>
            </div>
            
            <div id="projectsList" class="projects-grid"></div>
        </div>
    </div>

    <!-- Logs Modal -->
    <div id="logsModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Project Logs</h2>
                <span class="close-modal" onclick="closeLogsModal()">&times;</span>
            </div>
            <div id="logsContent">
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading logs...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        let API_KEY = '';
        const API_URL = window.location.origin;

        // Login functionality
        async function login() {
            const apiKey = document.getElementById('apiKey').value;
            const errorDiv = document.getElementById('loginError');
            
            if (!apiKey) {
                showError(errorDiv, 'Please enter an API key');
                return;
            }

            try {
                // Test API key by fetching speakers list
                const response = await fetch(`${API_URL}/speakers`, {
                    headers: {
                        'X-API-KEY': apiKey
                    }
                });

                if (response.ok) {
                    API_KEY = apiKey;
                    localStorage.setItem('apiKey', apiKey);
                    document.getElementById('loginScreen').classList.add('hidden');
                    document.getElementById('mainContent').classList.remove('hidden');
                    loadProjects();
                } else {
                    showError(errorDiv, 'Invalid API key');
                }
            } catch (error) {
                showError(errorDiv, 'Failed to connect to server');
            }
        }

        function logout() {
            API_KEY = '';
            localStorage.removeItem('apiKey');
            document.getElementById('loginScreen').classList.remove('hidden');
            document.getElementById('mainContent').classList.add('hidden');
            document.getElementById('apiKey').value = '';
        }

        // Check for saved API key on load
        window.addEventListener('DOMContentLoaded', () => {
            const savedKey = localStorage.getItem('apiKey');
            if (savedKey) {
                document.getElementById('apiKey').value = savedKey;
                login();
            }
        });

        // Tab switching
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            if (tab === 'create') {
                document.querySelector('.tab:nth-child(1)').classList.add('active');
                document.getElementById('createTab').classList.add('active');
            } else {
                document.querySelector('.tab:nth-child(2)').classList.add('active');
                document.getElementById('projectsTab').classList.add('active');
                loadProjects();
            }
        }

        // Load speakers
        async function loadSpeakers() {
            const speakerList = document.getElementById('speakerList');
            speakerList.innerHTML = '<div class="loading"><div class="spinner"></div></div>';
            speakerList.classList.remove('hidden');

            try {
                const response = await fetch(`${API_URL}/speakers`, {
                    headers: {
                        'X-API-KEY': API_KEY
                    }
                });

                if (!response.ok) throw new Error('Failed to load speakers');
                
                const speakers = await response.json();
                
                speakerList.innerHTML = '';
                speakers.forEach(speaker => {
                    const div = document.createElement('div');
                    div.className = 'speaker-item';
                    div.textContent = `${speaker.displayName} (${speaker.locale}) - ${speaker.gender}`;
                    div.onclick = () => {
                        document.querySelectorAll('.speaker-item').forEach(item => 
                            item.classList.remove('selected'));
                        div.classList.add('selected');
                        document.getElementById('selectedSpeaker').value = speaker.shortName;
                    };
                    speakerList.appendChild(div);
                });
            } catch (error) {
                speakerList.innerHTML = '<p style="color: red;">Failed to load speakers</p>';
            }
        }

        // Create story
        async function createStory(event) {
            event.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Creating...';

            const data = {
                topic: document.getElementById('topic').value,
                genre: document.getElementById('genre').value,
                language: document.getElementById('language').value,
                speaker: document.getElementById('selectedSpeaker').value,
                orientation: document.getElementById('orientation').value,
                totalImages: parseInt(document.getElementById('totalImages').value),
                modelProvider: document.getElementById('modelProvider').value,
                imageStyle: document.getElementById("imageStyle").value || null,
                narrativeTone: document.getElementById("narrativeTone").value || null,
            };

            if (!data.speaker) {
                showMessage('Please select a speaker', 'error');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Create Story';
                return;
            }

            try {
                const response = await fetch(`${API_URL}/stories/start`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-API-KEY': API_KEY
                    },
                    body: JSON.stringify(data)
                });

                if (!response.ok) throw new Error('Failed to create story');
                
                const project = await response.json();
                
                // Trigger generation
                await fetch(`${API_URL}/stories/${project.id}/generate`, {
                    method: 'POST',
                    headers: {
                        'X-API-KEY': API_KEY
                    }
                });

                showMessage('Story project created! Generation started.', 'success');
                document.getElementById('storyForm').reset();
                document.getElementById('selectedSpeaker').value = '';
                document.getElementById('speakerList').classList.add('hidden');
                
                // Switch to projects tab
                switchTab('projects');
            } catch (error) {
                showMessage('Failed to create story: ' + error.message, 'error');
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Create Story';
            }
        }

        // Load projects
        async function loadProjects() {
            const loading = document.getElementById('projectsLoading');
            const list = document.getElementById('projectsList');
            
            loading.classList.remove('hidden');
            list.innerHTML = '';

            try {
                const response = await fetch(`${API_URL}/stories`, {
                    headers: {
                        'X-API-KEY': API_KEY
                    }
                });

                if (!response.ok) throw new Error('Failed to load projects');
                
                const projects = await response.json();
                
                loading.classList.add('hidden');
                
                if (projects.length === 0) {
                    list.innerHTML = '<p style="text-align: center; color: #666;">No projects yet. Create your first story!</p>';
                    return;
                }

                projects.forEach(project => {
                    const card = document.createElement('div');
                    card.className = 'project-card';
                    
                    const statusClass = project.status.toLowerCase().includes('completed') ? 'completed' :
                                      project.status.toLowerCase().includes('failed') ? 'failed' :
                                      project.status.toLowerCase().includes('pending') ? 'pending' : 'processing';
                    
                    const showRetry = statusClass === 'failed' || statusClass === 'processing';
                    
                    card.innerHTML = `
                        <h3>${project.titleGenerated || project.topic}</h3>
                        <p><strong>Genre:</strong> ${project.genre}</p>
                        <p><strong>Language:</strong> ${project.language}</p>
                        <p><strong>Scenes:</strong> ${project.totalImages}</p>
                        <p><strong>Image Style:</strong> ${project.imageStyle || 'Default'}</p>
                        <p><strong>Tone:</strong> ${project.narrativeTone || 'Default'}</p>
                        <span class="status ${statusClass}">${project.status}</span>
                        ${project.videoPath ? `<p style="margin-top: 10px;"><a href="${project.videoPath}" target="_blank" style="color: #667eea;">Download Video</a></p>` : ''}
                        <div class="action-buttons">
                            <button class="action-btn logs-btn" onclick="viewLogs('${project.id}')">View Logs</button>
                            ${showRetry ? `<button class="action-btn retry-btn" onclick="retryGeneration('${project.id}')">Retry</button>` : ''}
                        </div>
                    `;
                    
                    list.appendChild(card);
                });
            } catch (error) {
                loading.classList.add('hidden');
                list.innerHTML = '<p style="color: red; text-align: center;">Failed to load projects</p>';
            }
        }

        // View logs for a project
        async function viewLogs(projectId) {
            const modal = document.getElementById('logsModal');
            const content = document.getElementById('logsContent');
            
            modal.style.display = 'block';
            content.innerHTML = '<div class="loading"><div class="spinner"></div><p>Loading logs...</p></div>';
            
            try {
                const response = await fetch(`${API_URL}/stories/${projectId}/logs`, {
                    headers: {
                        'X-API-KEY': API_KEY
                    }
                });
                
                if (!response.ok) throw new Error('Failed to load logs');
                
                const logs = await response.json();
                
                if (logs.length === 0) {
                    content.innerHTML = '<p style="text-align: center; color: #666;">No logs available</p>';
                    return;
                }
                
                content.innerHTML = logs.map(log => {
                    const date = new Date(log.createdAt);
                    return `
                        <div class="log-entry ${log.level}">
                            <div class="log-time">${date.toLocaleString()}</div>
                            <div class="log-code">${log.code}</div>
                            <div class="log-message">${log.message}</div>
                        </div>
                    `;
                }).join('');
            } catch (error) {
                content.innerHTML = '<p style="color: red; text-align: center;">Failed to load logs</p>';
            }
        }

        // Close logs modal
        function closeLogsModal() {
            document.getElementById('logsModal').style.display = 'none';
        }

        // Retry generation for a project
        async function retryGeneration(projectId) {
            if (!confirm('Retry story generation? This will resume from where it left off.')) {
                return;
            }
            
            try {
                const response = await fetch(`${API_URL}/stories/${projectId}/retry`, {
                    method: 'POST',
                    headers: {
                        'X-API-KEY': API_KEY
                    }
                });
                
                if (!response.ok) throw new Error('Failed to retry generation');
                
                showMessage('Generation retry started!', 'success');
                
                // Refresh projects after a short delay
                setTimeout(() => loadProjects(), 2000);
            } catch (error) {
                showMessage('Failed to retry generation: ' + error.message, 'error');
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('logsModal');
            if (event.target === modal) {
                closeLogsModal();
            }
        }

        function showMessage(message, type) {
            const messageDiv = document.getElementById('message');
            messageDiv.className = type === 'success' ? 'success' : 'error';
            messageDiv.textContent = message;
            messageDiv.classList.remove('hidden');
            
            setTimeout(() => {
                messageDiv.classList.add('hidden');
            }, 5000);
        }

        function showError(element, message) {
            element.textContent = message;
            element.classList.remove('hidden');
            setTimeout(() => {
                element.classList.add('hidden');
            }, 5000);
        }
    </script>
</body>
</html>
